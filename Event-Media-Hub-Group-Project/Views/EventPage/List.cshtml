@model IEnumerable<Event_Media_Hub_Group_Project.Models.EventDto>
@{
    ViewData["Title"] = "Event List";
}

<h1>Events</h1>

<p>
    <a asp-action="New" class="btn-create">Create New Event</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>@item.EventName</h5>
                    <p class="text-muted">@item.Date.ToString("yyyy-MM-dd")</p>
                </div>
                <div class="card-body">
                    <p><strong>Description:</strong> @item.Description</p>
                    <p><strong>Location:</strong> @item.LocationName</p>
                    <p><strong>User:</strong> @item.UserName</p>
                </div>
                <div class="card-footer text-right">
                    <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="ConfirmDelete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
