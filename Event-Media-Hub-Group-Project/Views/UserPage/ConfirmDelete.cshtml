@model Event_Media_Hub_Group_Project.Models.UserDto

@{
    ViewData["Title"] = "Confirm Delete";  // Setting the title for the page
}

<h1 id="ConfirmDeleteTitle">Confirm Delete</h1>

<!-- Confirmation message asking the user to confirm the deletion of the user -->
<h3 id="DeleteConfirmationMessage">Are you sure you want to delete this user?</h3>

<div id="UserDetails">
    <h4 id="UserDetailsTitle">User</h4>
    <hr />

    <!-- Displaying user details in a definition list (dl) -->
    <dl class="row" id="UserDetailsList">
        <!-- UserName -->
        <dt class="col-sm-2" id="UserNameLabel">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10" id="UserNameValue">
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <!-- User Email -->
        <dt class="col-sm-2" id="EmailLabel">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10" id="EmailValue">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <!-- User Role -->
        <dt class="col-sm-2" id="RoleLabel">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10" id="RoleValue">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>

    <!-- Form to delete the user, with a hidden field for the user ID -->
    <form asp-action="Delete" asp-route-id="@Model.UserId" id="DeleteUserForm">
        <!-- Hidden input to hold the user ID -->
        <input type="hidden" asp-for="UserId" id="UserId" />
        <!-- Submit button to delete the user -->
        <input type="submit" value="Delete" class="btn btn-danger" id="DeleteButton" />
        <!-- Link to go back to the list of users -->
        <a asp-action="List" class="btn btn-primary" id="BackToListButton">Back to List</a>
    </form>
</div>
