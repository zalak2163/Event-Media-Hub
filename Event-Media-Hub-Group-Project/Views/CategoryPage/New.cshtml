@model Event_Media_Hub_Group_Project.Models.CategoryDto

@{
    ViewData["Title"] = "Create Category";
}

<h1>Create New Category</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Create New Category</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label">Category Name:</label>
                        <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>

@*
    Summary:
    - This page is used for creating a new category.
    - It displays a form with one input field for entering the category name.
    - The form is validated to ensure that the `CategoryName` is entered.
    - If validation fails, the error messages will be displayed below the input field.
    - There is a button to submit the form and create the category, and another button to navigate back to the list of categories.
*@
