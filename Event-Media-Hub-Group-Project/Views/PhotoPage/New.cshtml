@model Event_Media_Hub_Group_Project.Models.PhotoDto
@{
    ViewData["Title"] = "Create New Photo";
}

<h1 id="CreatePhotoTitle">Create New Photo</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" id="CreatePhotoForm">
            <div asp-validation-summary="ModelOnly" class="text-danger" id="ValidationSummary"></div>

            <!-- Title -->
            <div class="form-group" id="TitleGroup">
                <label asp-for="Title" class="control-label" id="TitleLabel">Title:</label>
                <input asp-for="Title" class="form-control" placeholder="Enter photo title" id="TitleInput" />
                <span asp-validation-for="Title" class="text-danger" id="TitleValidation"></span>
            </div>

            <!-- Description -->
            <div class="form-group" id="DescriptionGroup">
                <label asp-for="Description" class="control-label" id="DescriptionLabel">Description:</label>
                <input asp-for="Description" class="form-control" placeholder="Enter photo description" id="DescriptionInput" />
                <span asp-validation-for="Description" class="text-danger" id="DescriptionValidation"></span>
            </div>

            <!-- Price -->
            <div class="form-group" id="PriceGroup">
                <label asp-for="Price" class="control-label" id="PriceLabel">Price:</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter photo price" id="PriceInput" />
                <span asp-validation-for="Price" class="text-danger" id="PriceValidation"></span>
            </div>

            <!-- UserId -->
            <div class="form-group" id="UserIdGroup">
                <label asp-for="UserId" class="control-label" id="UserIdLabel">User:</label>
                <input asp-for="UserId" class="form-control" placeholder="Enter user ID" id="UserIdInput" />
                <span asp-validation-for="UserId" class="text-danger" id="UserIdValidation"></span>
            </div>

            <!-- UserName -->
            <div class="form-group" id="UserNameGroup">
                <label asp-for="UserName" class="control-label" id="UserNameLabel">User Name:</label>
                <input asp-for="UserName" class="form-control" placeholder="Enter user name" id="UserNameInput" />
                <span asp-validation-for="UserName" class="text-danger" id="UserNameValidation"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="CreateButton" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" class="btn btn-secondary" id="BackToListButton">Back to List</a>
</div>
