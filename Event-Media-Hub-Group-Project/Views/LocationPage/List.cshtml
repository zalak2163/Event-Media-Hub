@model IEnumerable<Event_Media_Hub_Group_Project.Models.LocationDto>

@{
    ViewData["Title"] = "Location List";
}

<h1 class="mb-4">Locations</h1>

<p>
    <!-- Button to create a new location -->
    <a asp-action="New" class="btn btn-success">Create New Location</a>
</p>

<div class="row">
    <!-- Loop through all the locations and display each one in a card -->
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <!-- Card header displaying the location name -->
                <div class="card-header">
                    <h5>@item.LocationName</h5>
                </div>

                <div class="card-body">
                    <!-- Card body displaying the location's address and capacity -->
                    <p><strong>Address:</strong> @item.Address</p>
                    <p><strong>Capacity:</strong> @item.Capacity</p>
                </div>

                <div class="card-footer text-right">
                    <!-- Footer with action buttons: Edit, Details, and Delete -->
                    <a asp-action="Edit" asp-route-id="@item.LocationId" class="btn btn-sm btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.LocationId" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="ConfirmDelete" asp-route-id="@item.LocationId" class="btn btn-sm btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Button to go back to the location list -->
<div class="mt-4">
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>
