@model Event_Media_Hub_Group_Project.Models.PhotoDto
@{
    ViewData["Title"] = "Edit Photo";
}

<h1>Edit Photo</h1>
<h4>Photo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-route-id="@Model.PhotoId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PhotoId" id="PhotoId" class="form-control" />

            <!-- Title Field -->
            <div class="form-group">
                <label asp-for="Title" class="control-label" id="TitleLabel">Title:</label>
                <input asp-for="Title" class="form-control" placeholder="@Model.Title" id="Title" />
                <span asp-validation-for="Title" class="text-danger" id="TitleValidation"></span>
            </div>

            <!-- Description Field -->
            <div class="form-group">
                <label asp-for="Description" class="control-label" id="DescriptionLabel">Description:</label>
                <input asp-for="Description" class="form-control" placeholder="@Model.Description" id="Description" />
                <span asp-validation-for="Description" class="text-danger" id="DescriptionValidation"></span>
            </div>

            <!-- Price Field -->
            <div class="form-group">
                <label asp-for="Price" class="control-label" id="PriceLabel">Price:</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="@Model.Price" id="Price" />
                <span asp-validation-for="Price" class="text-danger" id="PriceValidation"></span>
            </div>

            <!-- User Field -->
            <div class="form-group">
                <label asp-for="UserId" class="control-label" id="UserLabel">User:</label>
                <input asp-for="UserId" class="form-control" placeholder="@Model.UserId" id="UserId" />
                <span asp-validation-for="UserId" class="text-danger" id="UserValidation"></span>
            </div>

            <!-- User Name Field -->
            <div class="form-group">
                <label asp-for="UserName" class="control-label" id="UserNameLabel">User Name:</label>
                <input asp-for="UserName" class="form-control" placeholder="@Model.UserName" id="UserName" />
                <span asp-validation-for="UserName" class="text-danger" id="UserNameValidation"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" id="SaveButton" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" class="btn btn-secondary" id="BackToListButton">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
