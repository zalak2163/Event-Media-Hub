@model Event_Media_Hub_Group_Project.Models.CategoryDto
@{
    ViewData["Title"] = "Confirm Delete";  // Set the title of the page
}

<h1 id="confirm-delete-title">Confirm Delete</h1>  <!-- Heading asking the user to confirm the deletion -->

<div id="delete-category-card" class="card">
    <div class="card-header">
        <h3 id="delete-category-header">Are you sure you want to delete this category?</h3>  <!-- Prompt for the user to confirm deletion -->
    </div>
    <div class="card-body">
        <h4 id="category-title">Category</h4>  <!-- Section heading for the category details -->
        <hr />  <!-- Horizontal line separating the heading from the details -->
        <dl class="row" id="category-details">
            <!-- Displaying the category's name -->
            <dt class="col-sm-2" id="category-name-label">
                @Html.DisplayNameFor(model => model.CategoryName)  <!-- Display the label for the category name -->
            </dt>
            <dd class="col-sm-10" id="category-name-value">
                @Html.DisplayFor(model => model.CategoryName)  <!-- Display the category's name value -->
            </dd>
        </dl>

        <!-- Form to handle the delete action -->
        <form asp-action="Delete" asp-route-id="@Model.CategoryId" id="delete-category-form">
            <input type="hidden" asp-for="CategoryId" />  <!-- Hidden input field to store the category ID -->
            <button type="submit" id="delete-button" class="btn btn-danger">Delete</button>  <!-- Button to submit the delete request -->
            <span>|</span>  <!-- Pipe separator between the buttons -->
            <a asp-action="List" class="btn btn-primary" id="back-to-list-button">Back to List</a>  <!-- Button to navigate back to the category list -->
        </form>
    </div>
</div>

@*
    This view is used to confirm the deletion of a category.
    - It first asks the user for confirmation to delete a specific category.
    - The category's name is displayed in a description list (dl).
    - The form is set up to submit the category's ID to the server for deletion.
    - The user can either confirm the deletion by clicking "Delete" or return to the category list using the "Back to List" button.
*@
