@model Event_Media_Hub_Group_Project.Models.LocationDto

@{
    ViewData["Title"] = "Edit Location";
}

<h1>Edit Location</h1>

<div class="row">
    <!-- Form container for editing location details -->
    <div class="col-md-6">
        <div class="card">
            <!-- Card header with the title -->
            <div class="card-header">
                <h4>Edit Location Details</h4>
            </div>

            <div class="card-body">
                <!-- Form for updating location details -->
                <form asp-action="Update" asp-route-id="@Model.LocationId">
                    <!-- Validation summary to show errors related to the model -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Hidden input to pass the LocationId to the server -->
                    <input type="hidden" asp-for="LocationId" />

                    <!-- Location Name Input -->
                    <div class="form-group">
                        <label asp-for="LocationName" class="control-label">Location Name:</label>
                        <!-- Input field for Location Name with validation -->
                        <input asp-for="LocationName" class="form-control" placeholder="Enter location name" />
                        <!-- Validation error message for Location Name -->
                        <span asp-validation-for="LocationName" class="text-danger"></span>
                    </div>

                    <!-- Address Input -->
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Address:</label>
                        <!-- Input field for Address with validation -->
                        <input asp-for="Address" class="form-control" placeholder="Enter address" />
                        <!-- Validation error message for Address -->
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- Capacity Input -->
                    <div class="form-group">
                        <label asp-for="Capacity" class="control-label">Capacity:</label>
                        <!-- Input field for Capacity (number input) with validation -->
                        <input asp-for="Capacity" class="form-control" placeholder="Enter capacity" type="number" />
                        <!-- Validation error message for Capacity -->
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Link to go back to the location list page -->
<div class="mt-3">
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        // Render the validation scripts partial view to enable client-side validation
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
