@model Event_Media_Hub_Group_Project.Models.LocationDto
@{
    ViewData["Title"] = "Confirm Delete";
}

<h1>Confirm Deletion</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Location Details</h4>
            </div>
            <div class="card-body">
                <h3>Are you sure you want to delete this location?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.LocationName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.LocationName)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Capacity)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Capacity)
                    </dd>
                </dl>

                <form asp-action="Delete" method="post" asp-route-id="@Model.LocationId">
                    <input type="hidden" asp-for="LocationId" />
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </form>
                <div>
                    <a asp-action="List" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
