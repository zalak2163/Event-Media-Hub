@model Event_Media_Hub_Group_Project.Models.LocationDto
@{
    ViewData["Title"] = "Edit Location";
}

<h1>Edit Location</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Edit Location Details</h4>
            </div>
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.LocationId">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="LocationId" />

                    <!-- Location Name -->
                    <div class="form-group">
                        <label asp-for="LocationName" class="control-label">Location Name:</label>
                        <input asp-for="LocationName" class="form-control" placeholder="Enter location name" />
                        <span asp-validation-for="LocationName" class="text-danger"></span>
                    </div>

                    <!-- Address -->
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Address:</label>
                        <input asp-for="Address" class="form-control" placeholder="Enter address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- Capacity -->
                    <div class="form-group">
                        <label asp-for="Capacity" class="control-label">Capacity:</label>
                        <input asp-for="Capacity" class="form-control" placeholder="Enter capacity" type="number" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
